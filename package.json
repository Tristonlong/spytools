{
  "name": "screen-recorder",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"vite --mode development\" \"electron .\"",
    "build:renderer": "vite build",
    "build:main": "vite build --config vite.main.config.js",
    "build": "npm run build:renderer",
    "electron:dev": "vite --mode development && electron .",
    "electron:build": "npm run build:renderer && electron-builder"
  },
  "dependencies": {
    "axios": "^1.12.0",
    "cors": "^2.8.5",
    "vue": "^3.5.21",
    "vue-router": "next"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.5",
    "vite-plugin-electron": "^0.29.0"
  },
  "vite": {
    "plugins": [
      {
        "name": "electron",
        "main": {
          "entry": "electron/main.js"
        },
        "preload": {
          "input": "electron/preload.js"
        }
      }
    ]
  },
  "build": {
    "files": [
      "dist/**/*",
      "electron/**/*"
    ]
  }
}
